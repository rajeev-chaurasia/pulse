# Pulse - Environment Configuration Template
# Copy this file to .env and customize for your environment

# ============================================
# KAFKA CONFIGURATION
# ============================================
# For local development (running outside Docker): localhost:9092
# For Docker containers: kafka:29092
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# ============================================
# FLINK CONFIGURATION
# ============================================
# Should match number of Kafka partitions for optimal throughput
# Local dev: 1, Production: match your partition count
FLINK_PARALLELISM=1

# ============================================
# DYNAMODB CONFIGURATION
# ============================================
# For local development: http://localhost:8000
# For Docker containers: http://dynamodb-local:8000
DYNAMODB_ENDPOINT=http://localhost:8000
AWS_REGION=us-west-2

# ============================================
# GRPC CONFIGURATION
# ============================================
GRPC_SERVER_PORT=9090

